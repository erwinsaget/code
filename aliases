alias up='cd ..'
alias home='cd ~'
alias code='cd ~/Code'
alias dl="cd ~/Downloads"
alias dotfiles="cd ~/Code/dotfiles"
alias gtkcss="vim ~/.config/gtk-3.0/gtk.css"
alias voithea="cd ~/Code/voithea"

alias update="sudo apt-get update"
alias upgrade="sudo apt-get upgrade"
alias upgrades="apt list --upgradeable"
alias install="sudo apt install $*"
alias uninstall="sudo apt-get remove $*"
alias addrepo="sudo add-apt-repository $1"
alias removerepo="sudo add-apt-repository --remove $1"
alias autoremove="sudo apt-get autoremove"

alias ci='composer install'
alias cu='composer update'
alias cda='composer dumpautoload'

alias art='php artisan'
alias pam="php artisan migrate:refresh --seed"
alias acc="php artisan cache:clear"
alias routes='php artisan route:list'

alias vimrc='vim ~/.vimrc'
alias zshconfig='vim ~/.zshrc'
alias reload="source ~/.zshrc"
alias aliases='vim ~/.aliases'
alias tconf="vim ~/.tmux.conf"

alias tags="ctags -R --exclude=node_modules --exclude=public --exclude=resources --languages=-javascript"
alias dre='docker rm $(docker ps -q -f status=exited)'

alias gffs="git flow feature start"
alias gfff="git flow feature finish"
#wrapper around git add & commit
gcaa() { git add --all && git commit -m "$*" }

