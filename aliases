alias up='cd ..'
alias home='cd ~'
alias code='cd ~/code'
alias coe="cd ~/code/coe"
alias dl="cd ~/Downloads"
alias temp='cd ~/.temp'

alias ci='composer install'
alias cda='composer dumpautoload'

alias art='php artisan'
alias pam="php artisan migrate:refresh --seed"
alias acc="php artisan cache:clear"
alias routes='php artisan route:list'

alias vpn='/opt/cisco/anyconnect/bin/vpn'
alias vpnc='/opt/cisco/anyconnect/bin/vpn connect edge.spinen.net'
alias vpnd='/opt/cisco/anyconnect/bin/vpn disconnect'

alias vimrc='vim ~/.vimrc'
alias zshconfig='vim ~/.zshrc'
alias reload="source ~/.zshrc"
alias aliases='vim ~/.aliases'
alias tconf="vim ~/.tmux.conf"

alias tags="ctags -R --exclude=node_modules --exclude=public --exclude=resources --languages=-javascript"
alias dre='docker rm $(docker ps -q -f status=exited)'

#wrapper around git add & commit
gcaa() { git add --all && git commit -m "$*" }
