alias up='cd ..'
alias home='cd $HOME'
alias dl="cd ~/Downloads"
alias db="cd ~/Dropbox"

alias vimrc='vim ~/.vimrc'
alias aliases='vim ~/.aliases'
alias codedir='cd ~/Documents/Code'
alias zshconfig='vim ~/.zshrc'
alias reload="source ~/.zshrc"
alias tconf="vim ~/.tmux.conf"
alias v="vim"

alias tags="ctags -R --exclude='node_modules' --exclude='public' --exclude='resources' --exclude='*.js'"
alias dre='docker rm $(docker ps -q -f status=exited)'

alias gffs="git flow feature start"
alias gfff="git flow feature finish"
alias gcho="git checkout"
alias nah="git reset --hard && git clean -df"
alias wip="git add . && git commit -m 'WIP'"

# Pipe anything into `clip` to forward it to Clipper
alias clip="nc localhost 8377"

#wrapper around git add & commit
gcaa() { git add --all && git commit -m "$*" }

